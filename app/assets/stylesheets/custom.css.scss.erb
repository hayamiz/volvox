/* -*- mode: css -*- */

/*
 * using color scheme: http://colorschemedesigner.com/#0n41Tuullw0w0
 */

body {
  background: #6F2C03 url('<%= image_path("volvox-bg.gif") %>');
  background-repeat: repeat-y;
  background-position: center;
}

div.container {
  width: 710px;
}

section {
  font-size: 120%;
}

header.main {
  margin-bottom: 10px;
  text-align: center;

  nav {
    background-color: #D59065;
    float: right;
    border-bottom: solid 1px #AA640B;
    border-right: solid 1px #AA640B;
    padding: 3px;

    ul {
      margin: 0;
      padding: 0;

      li {
	list-style-type: none;
	display: inline-block;
        margin: 5px 2px;
      }
    }
  }

  h1 {
    font-size: 60px;
    font-family: 'Slackey', cursive;
    color: #4072B7;
    text-align: left;
    margin-bottom: 0;

    a {
      color: #4072B7;
      text-decoration: none;
    }
    a:visited { color: #4072B7; }
    a:hover   { color: #4072B7; }
  }

  h2 {
    font-family: 'Merienda One', cursive;
    font-size: 20px;
    text-align: left;
    margin-top: -25px;
    margin-left: 8em;
    text-shadow: 2px 2px 2px rgba(255,255,255,0.25);
    color: white;

    a {
      color: white;
      text-decoration: none;
    }
    a:visited { color: white; }
    a:hover   { color: white; }
  }
}

section.main {
  background: #FFF8DC;
  padding: 20px;
}

.button, .button:visited {
  background: #222 url(<%= image_path "button-overlay-30.png" %>) repeat-x;
  -moz-border-radius:    5px;
  -webkit-border-radius: 5px;
  border-radius:         5px;
  text-shadow: 0 -1px 1px rgba(0,0,0,0.25);
  border-bottom: 1px solid rgba(0,0,0,0.25);
  border-right: 1px solid rgba(0,0,0,0.25);
  color: white;
  padding: 5px 8px;
  font-weight: bold;
  text-decoration: none;
}
.button:hover {
  background: #222 url(<%= image_path "button-overlay-30-rot.png" %>) repeat-x;
  color: white;
}
.blue.button, .blue.button:visited { background-color: #2981e4; }
.red.button, .red.button:visited   { background-color: #e62727; }
/* .blue.button:hover                 { background-color: #2575cf; } */


.round .round5 {
  -moz-border-radius:    5px;
  -webkit-border-radius: 5px;
  border-radius:         5px;
}

.round .round10 {
  -moz-border-radius:    10px;
  -webkit-border-radius: 10px;
  border-radius:         10px;
}

a.signup_button {
  margin-left: auto;
  margin-right: auto;
  display: block;
  text-align: center;
  width: 200px;
  background: #024738;
  color: white;
  font-size: 30px;
  padding: 15px;
  text-decoration: none;
}
a.signup_button:hover {
  text-decoration: underline;
}

article.entry {
  background-color: white;
  padding: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  border-right: 1px solid rgba(0, 0, 0, 0.25);

  header {
    h2 {
      clear: left;
    }
    .aux {
      float: right;
    }
  }
}

section.console {
  font-family: monospace;
  background: white;
  border: solid 2px steelblue;
  padding: 5px;
  margin-top: 20px;
}


div.field, div.actions {
  margin-bottom: 10px;
}

.field_with_errors {
  margin-top: 10px;
  padding: 2px;
  background-color: red;
  display: table;
}

.field_with_errors label {
  color: #fff;
}

#error_explanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;

  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    background-color: #c00;
    color: #fff;
  }
  p {
    color: #333;
    margin-bottom: 0;
    padding: 5px;
  }
  ul li {
    font-size: 12px;
    list-style: square;
  }
}
