/* -*- mode: css -*- */

/*
 * using color scheme: http://colorschemedesigner.com/#0n41Tuullw0w0
 * 
 * memo: http://www.colorschemer.com/online.html
 */

body {
  background: #6F2C03 url('<%= image_path("volvox-bg.gif") %>');
  background-repeat: repeat-y;
  background-position: center;
}

div.container {
  width: 710px;
}

section {
  font-size: 120%;
}

header.main {
  margin-bottom: 10px;
  text-align: center;

  nav {
    background-color: #D59065;
    float: right;
    border-bottom: solid 1px #AA640B;
    border-right: solid 1px #AA640B;
    padding: 3px;

    ul {
      margin: 0;
      padding: 0;

      li {
	list-style-type: none;
	display: inline-block;
        margin: 5px 2px;
      }
    }
  }

  h1 {
    font-size: 60px;
    font-family: 'Slackey', cursive;
    color: #4072B7;
    text-align: left;
    margin-bottom: 0;

    a {
      color: #4072B7;
      text-decoration: none;
    }
    a:visited { color: #4072B7; }
    a:hover   { color: #4072B7; }
  }

  h2 {
    font-family: 'Merienda One', cursive;
    font-size: 20px;
    text-align: left;
    margin-top: -25px;
    margin-left: 8em;
    text-shadow: 2px 2px 2px rgba(255,255,255,0.25);
    color: white;

    a {
      color: white;
      text-decoration: none;
    }
    a:visited { color: white; }
    a:hover   { color: white; }
  }
}

footer.main {
  text-align: center;
  background-color: white;
  padding: 5px;
}

section.main {
  background: #FFF8DC;
  padding: 20px;
  margin-bottom: 20px;
}

.button, .button:visited {
  background: #222 url(<%= image_path "button-overlay-30.png" %>) repeat-x;
  -moz-border-radius:    5px;
  -webkit-border-radius: 5px;
  border-radius:         5px;
  text-shadow: 0 -1px 1px rgba(0,0,0,0.25);
  border-bottom: 1px solid rgba(0,0,0,0.25);
  border-right: 1px solid rgba(0,0,0,0.25);
  color: white;
  padding: 5px 8px;
  font-weight: bold;
  text-decoration: none;
}
.button:hover {
  background: #222 url(<%= image_path "button-overlay-30-rot.png" %>) repeat-x;
  color: white;
}
.blue.button, .blue.button:visited { background-color: #2981e4; }
.red.button, .red.button:visited   { background-color: #e62727; }
/* .blue.button:hover                 { background-color: #2575cf; } */

@mixin round5 {
  -moz-border-radius:    5px;
  -webkit-border-radius: 5px;
  border-radius:         5px;
}

@mixin round10 {
  -moz-border-radius:    10px;
  -webkit-border-radius: 10px;
  border-radius:         10px;
}

.round, .round5 {
  @include round5
}

.round10 {
  @include round10
}

a.signup_button {
  margin-left: auto;
  margin-right: auto;
  display: block;
  text-align: center;
  width: 200px;
  background: #024738;
  color: white;
  font-size: 30px;
  padding: 15px;
  text-decoration: none;
}
a.signup_button:hover {
  text-decoration: underline;
}

section.main {
  @include round10;
}

article.entry {
  @include round10;
  background-color: white;
  padding: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  border-right: 1px solid rgba(0, 0, 0, 0.25);

  header {
    margin-bottom: 5px;

    h1, h2 {
      @include round10;
      font-size: 1.8em;
      background: #046AA9 url(<%= image_path "button-overlay-50.png" %>) repeat-x;
      color: white;
      padding: 0 20px;
      line-height: 40px;
      border-top: solid 2px rgba(0, 0, 0, 0.25);
      border-left: solid 2px rgba(0, 0, 0, 0.25);
      margin-bottom: 0;

      a { color: white; }
      .button {
        font-size: 15px;
        line-height: 40px;
      }
    }
    p.climate {
      color: white;
      position: relative;
      top: -40px;
      text-align: right;
      padding: 0 20px;
    }
    p.meta {
      margin: 0px;
      text-align: right;
      font-size: 80%;
    }
  }
  section.entry-body {
    table {
      font-size: 80%;
      border-spacing: 3px;

      th {
        @include round5;
        color: white;
        background-color: #03456D;
        text-align: center;
      }
      td {
        background-color: white;
        color: black;
        border-right: 5px solid lightgray;
        border-bottom: solid 1px lightgray;

        p {
          margin: 0.3em 0;
        }
      }
    }
  }
}

section.console {
  font-family: monospace;
  background: white;
  border: solid 2px steelblue;
  padding: 5px;
  margin-top: 20px;
}


div.field, div.actions {
  margin-bottom: 10px;
}

.field_with_errors {
  margin-top: 10px;
  padding: 2px;
  background-color: red;
  display: table;
}

.field_with_errors label {
  color: #fff;
}

#error_explanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;

  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    background-color: #c00;
    color: #fff;
  }
  p {
    color: #333;
    margin-bottom: 0;
    padding: 5px;
  }
  ul li {
    font-size: 12px;
    list-style: square;
  }
}

div.pagination {
  text-align: center;
  margin: 1em;

  span, a, em {
    padding: 3px 5px;
    border: 1px solid steelblue;
    background-color: white;
  }
  a {
    text-decoration: none;
  }
  em.current {
    background-color: steelblue;
    color: white;
  }
}

form {
  textarea {
    height: 8em;
  }
}

.icon-add {
  line-height: 16px;
  background: url(<%= image_path "icons/note_add.png" %>) no-repeat;
  padding-left: 16px;
}

.icon-edit {
  line-height: 16px;
  background: url(<%= image_path "icons/note_edit.png" %>) no-repeat;
  padding-left: 16px;
}

section.diary {
  font-size: 100%;

  header {
    ul {
      li {
	list-style-type: none;
	display: inline-block;
        margin: 3px;

        a {
          
        }
      }
    }
  }
}