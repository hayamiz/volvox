
<table>
  <tr>
    <th>Time</th>
    <% @opt_columns.each do |col| %>
      <th><%= col.name %></th>
    <% end %>
  </tr>
  <% @opt_records.each do |rec| %>
    <tr>
      <td><%= l(rec.time, :format => :short) %></td>
      <% @opt_columns.each do |col| %>
	<td><%= rec.value[col.ckey] || "-" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
