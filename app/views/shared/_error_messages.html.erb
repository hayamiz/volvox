<% if object.errors.any? %>
  <div id="error_explanation">
    <h2><%= t('activerecord.errors.template.header', :model => object.class.model_name.human, :count => object.errors.count) %></h2>
    <p><%= t('activerecord.errors.template.body') %></p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
